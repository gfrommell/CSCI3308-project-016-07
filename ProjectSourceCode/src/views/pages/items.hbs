<div class="container">
    
</div>
<table class="table table-light container">
    <th>Events</th>
    <th></th>
    {{#if events}}

        {{#each events}}
            <tr>
                <td>

                    {{this.title}}
                </td>
                <td width = "150"><button class="btn btn-outline-success">Add</button></td>
            </tr>
           
        {{/each}}
    {{else}}
        <tr>
            <td>

                <p class="text-danger">No Events</p>
            </td>
        </tr>
    {{/if}}

</table>

<table class="table table-light container">
    <th>Campgrounds</th>
    <th></th>
    {{#if campgrounds}}
        {{#each campgrounds}}
        <tr>
            <td> 

                {{this.name}}
                <td width="150"><button class="btn btn-outline-success">Add</button></td>
            </td>
        </tr>
        {{/each}}
    {{else}}

        <tr>
            <td>

                <p class="text-danger">No Campgrounds</p>
            </td>
            <td></td>
        </tr>

    {{/if}}


</table>

<table class="table table-light container">
    <th>Tours</th>
    <th></th>
    {{#if tours}}
        {{#each tours}}
            <tr>
                <td>
                    {{this.title}}
                    <td width="150"><button class="btn btn-outline-success">Add</button></td>
                </td>
            </tr>
        {{/each}}
    {{else}}

        <tr>
            <td>

                <p class="text-danger">No Tours</p>
            </td>
        </tr>

    {{/if}}


</table>