<div class="container">
    
</div>
<table class="table table-light container">
    <th>Events</th>
    <th></th>
    {{#if events}}

        {{#each events}}
            <tr>
                <td>

                    {{this.title}}
                </td>
                <td width="150">
                    <form action="/insert-event/{{../day_id}}/{{this.event_id}}" method="post">
 
                         <button name="trip_id" value="{{../trip_id}}" class="btn btn-outline-success">Add</button>
                    </form>
                </td>
            </tr>
           
        {{/each}}
    {{else}}
        <tr>
            <td>

                <p class="text-danger">No Events</p>
            </td>
            <td></td>
        </tr>
    {{/if}}

</table>

