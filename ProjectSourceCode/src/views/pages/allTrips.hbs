<head>
    <style>
        tr {
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>All Your Trips</h1><br>
        <table>
            <tr>
                <th width="200">Trip Name</th>
                <th width="200">Start Date</th>
                <th width="100">Duration</th>
                <th width="100">Progress</th>
                <th width="100"></th>
            </tr>
            {{#each data}}
            <tr>
                
                <td witdh="200">{{this.trip_title}}</td>
                <td width="200">{{formatDate this.start_date}}</td>
                <td width="150">{{this.number_of_days}} Days</td>
                <td width="150">{{this.trip_progress}}</td>

                <td>

                {{!-- TODO: Share functionality --}}
                <form action="/trip/share" method="post">
                    <button type="button" class="btn btn-outline-dark">Share</button>
                </form>
                </td>

                <td>
                    <form action="/trip/delete" method="post">
                        <button class="btn btn-outline-danger" name="trip_id" value="{{this.trip_id}}">Delete</button>
                    </form>
                </td>
                

            </tr>
            {{/each}}
        </table>
    </div>

</body>

