<h1>Notifications</h1>
<table class="table">
            <thead>
                <tr>
                    <th>Sender</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{sender_username}}</td>
                    <td>{{message}}</td>
                    <td>{{date_sent}}</td>
                    <td>
                       <!-- <div id="action-buttons-{{notifications_id}}"> -->

                       <!-- <form action="/notifications" method="post">
                            <button class="btn btn-success" type="submit"onclick="handleResponse({{notifications_id}}, 'accept')">Accept</button>
                            <button class="btn btn-danger" type="submit" name="decline" value="false" onclick="handleResponse({{notifications_id}}, 'decline')">Decline</button>
                        </form>
                        </div>
                       <div id="action-response-{{notifications_id}}" style="display: none;"></div>
                            -->

                        {{#if (isDefined status)}}

                            {{#if status}}
                                <p>Accepted</p>
                            {{else}}
                                <p>Declined</p>
                            {{/if}}

                        {{else}}

                        <form action="/notifications" method="post">
                            <button class="btn btn-success" type="submit" name="invite" value="{ 'status': 'true', 'notif_id': '{{notifications_id}}', 'sender': '{{sender_username}}' }">Accept</button>
                        </form>
                        <form action="/notifications" method="post"></form>
                            <button class="btn btn-danger" type="submit" name="invite" value="{ 'status': 'false', 'notif_id': '{{notifications_id}}', 'sender': '{{sender_username}}' }">Decline</button>
                        </form>
                        

                        {{/if}}

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

