<div class="container mt-5">
        
        <div class="row justify-content-between mb-4"> 
            <div class="col-3">
                <h1 > Explore Parks</h1>
            </div>
            <div class="col-3">
             <form method="post" action="/exploreParks">
                <input type="text" class="form-contorl" name="keyword" id="keyword" placeholder="Search"/>
                <button id="submit_button" class="btn btn-outline-success" type="submit">Search</button>
            </form> 
            </div>
        </div>
        <div class="row">
            {{#each data}}
            <div class="col-md-4 mb-4">
                <div class="card shadow p-3 bg-body-tertiary rounded bo-color-light">
                    {{#with (getFirstImage this.images) as | image | }}
                    <img class="card-img-top" src="{{image.url}}" alt="Event Image">
                    {{/with}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.fullname}}</h5>
                        <p class="card-text">Location: {{this.states}}</p>
                        <p class="card-text">Park Code: {{this.park_code}}</p>
                        <a href="/park_details/:{{this.park_code}}" class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Details</a>
                        <a href="{{this.url}}" class="btn btn-outline-dark mx-3">Visit Park Site</a>
                    </div>
                </div>
            </div>
            {{/each}}
    </div>

