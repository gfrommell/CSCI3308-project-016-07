<div class="container mt-5">
        
        <div class="row"> 
            <div class="col-md-6">
                <h1 class="mb-4"> Explore Parks</h1>
            </div>
            <div class="col-md-6">
             <form method="post" action="/exploreParks">
                <input type="text" class="form-contorl" name="keyword" id="keyword" placeholder="Search"/>
                <button id="submit_button" class="btn btn-primary" type="submit">Search</button>
            </form> 
            </div>
        </div>
        <div class="row">
            {{#each data}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {{#with (getFirstImage this.images) as | image | }}
                    <img class="card-img-top" src="{{image.url}}" alt="Event Image">
                    {{/with}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.fullname}}</h5>
                        <p class="card-text">Location: {{this.states}}</p>
                        <p class="card-text">Park Code: {{this.park_code}}</p>
                        <a href="/park_details/:{{this.park_code}}">Details</a>
                        <a href="google.com" class="btn btn-primary">Visit Park Site</a>
                    </div>
                </div>
            </div>
            {{/each}}
    </div>

