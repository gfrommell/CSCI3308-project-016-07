{{>message}} 

 
<form
    class="mx-5 mt-3 d-flex justify-content-center align-items-center vh-100"
    action="/login"
    method="post"
>
    <div class="border p-5">
    <h2 class="mb-3">Login</h2>
    <label for="username">Username</label>
    <input
        class="form-control"
        type="text"
        name="username"
        id="username"
    />
    <label class="mt-3" for="password">Password</label>
    <input
        class="form-control mt-0"
        type="password"
        name="password"
        id="password"
    />
    <button class="btn btn-primary mt-3 w-100 rounded-pill " type="submit">Login</button>

    <p class="mt-4">Don't have an account? <a href="/register">Register</a></p>
    </div>
</form>