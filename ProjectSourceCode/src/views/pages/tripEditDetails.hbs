<div class="container">
  
   

        <h1 class="pt-3 color-eggplant">{{trip.trip_title}}</h1>

        <div class="row pb-3 px-2 justify-content-between">
            <div class="col-4 p-2 d-inline">Start Date: {{formatDate trip.start_date}}</div>
            <div class="col-4 p-2 d-inline">Duration: {{trip.number_of_days}} days</div>
            <div class="col-2 p-2 d-inline">
                <button data-bs-toggle="modal" data-bs-target="#edit-modal-{{trip.trip_id}}" type="button" id="{{trip.trip_id}}" class="edit btn btn-dark">Edit trip details</button>
            </div>
        </div>


        {{#each days}}

            <div class="mb-5 shadow p-3 bg-body-tertiary rounded"> 
                <div class="row justify-content-between"> 
                    <div class="col-4 pb-2 d-inline" >
                        <h4>Day {{this.day_number}}: {{formatDateIncrement this.start_date @index}} </h4>
                    </div>

                    <div class="col-2 pb-2 d-inline">
                        <form action="/{{this.trip_id}}/edit/{{this.day_id}}" method="get">
                            
                            <button class="btn btn-outline-dark">Add to day</button>
                        </form>
                    </div>
                </div>

                <table class="table table-light table-borderless">

                    <tr>
                        <th><strong>Park: {{this.fullname}}</strong></th>
                    </tr>


                    <tr>
                        <th><strong>Items scheduled</strong></th>
                    </tr>

                </table>

            </div>
        {{/each}}


    <!--EDIT Trip title, start date, and duration-->
        <div id="edit-modal-{{trip.trip_id}}" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit trip details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/tripEdit" method="post">


                             
                                    <label for="titleEdit">Title</label>
                                    <input class="form-control" type="text" name="title" id="titleEdit" placeholder="{{trip_title}}">
                                    
                                    <div class="row my-2">
                                        <div class="col-6">
                                            <label for="startdateEdit">Start Date</label>
                                            <input class="form-control" type="date" name="startdate" id="startdateEdit" value="{{formatDateInput start_date}}">
                                        </div>
                                        <div class="col-6">
                                            <label for="numdaysEdit">Number of Days</label>
                                            <input class="form-control" type="number" name="numdays" id="numdaysEdit" min="1" value="{{number_of_days}}">
                                        </div>
                                    </div>

                                    <br>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" name="trip_id" class="btn btn-primary" value="{{trip.trip_id}}">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>






</div>
