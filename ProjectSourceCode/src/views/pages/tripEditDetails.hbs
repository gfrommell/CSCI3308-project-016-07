<div class="container">
  
    {{#each trip}}

        <h1>{{this.trip_title}}</h1>

        <div class="row">
            <div class="col p-2 d-inline">Start Date: {{formatDate this.start_date}}</div>
            <div class="col p-2 d-inline">Duration: {{this.number_of_days}} days</div>
            <div class="col p-2 d-inline"><button data-bs-toggle="modal" data-bs-target="#edit-modal-{{this.trip_id}}" type="button" id="{{this.trip_id}}" class="edit btn btn-outline-dark">Edit trip details</button>  </div>

        </div>


        

        {{#times this.number_of_days}}

            <div> 
                <div class="row"> 
                    <div class="col p-2 d-inline" >
                        <h4>Day {{@index}}: {{formatDateIncrement this.start_date @index}} </h4>
                    </div>

                    <div class="col p-2 d-inline">
                        <button type="button" class="btn btn-outline-dark">Add to day</button>
                    </div>
                </div>

                <table>

                    <tr>
                        <th>Park</th>
                    </tr>


                    <tr>
                        <th>Items scheduled</th>
                    </tr>

                </table>

            </div>
        {{/times}}







    <!--EDIT Trip title, start date, and duration-->
        <div id="edit-modal-{{this.trip_id}}" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit trip details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/tripEdit" method="post">


                             
                                    <label for="titleEdit">Title</label>
                                    <input class="form-control" type="text" name="title" id="titleEdit" placeholder="{{trip_title}}">
                                    
                                    <div class="row my-2">
                                        <div class="col-6">
                                            <label for="startdateEdit">Start Date</label>
                                            <input class="form-control" type="date" name="startdate" id="startdateEdit" value="{{formatDateInput start_date}}">
                                        </div>
                                        <div class="col-6">
                                            <label for="numdaysEdit">Number of Days</label>
                                            <input class="form-control" type="number" name="numdays" id="numdaysEdit" min="1" value="{{number_of_days}}">
                                        </div>
                                    </div>

                                    <br>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" name="trip_id" class="btn btn-primary" value="{{this.trip_id}}">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

    {{/each}}




</div>
